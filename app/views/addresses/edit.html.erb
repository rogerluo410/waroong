<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-4 offset-md-4 p-4 card bg-white">
      <h5>编辑收货地址</h5>
      <%= form_for(@address, html: { class: 'needs-validation', novalidate: true }) do |f| %>
        <div class="form-group">
          <%= f.label "姓名" %><br />
          <%= f.text_field :name, autofocus: true, class: "form-control", required: true %>
          <div class="invalid-feedback">
            请输入收货人姓名
          </div>
        </div>

        <div class="form-group">
          <%= f.label "手机号" %>
          <%= f.text_field :cellphone, class: "form-control", required: true %>
          <div class="invalid-feedback">
            请输入收货人姓名
          </div>
        </div>

        <div class="form-group">
          <%= f.label "收货地址" %><br />
          <%= f.text_field :address, class: "form-control", required: true %>
          <div class="invalid-feedback">
            请输入收货人姓名
          </div>
        </div>

        <div class="form-group">
          <%= f.label "邮编" %><br />
          <%= f.text_field :post, class: "form-control", required: true %>
          <div class="invalid-feedback">
            请输入收货人姓名
          </div>
        </div>

        <div class="form-group">
          <%= f.submit "保存", class: "btn btn-primary btn-block" %>
        </div>
      <% end %>
    </div>
  </div>
</div>