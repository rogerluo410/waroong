<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-4 offset-md-4 p-4 card bg-white">
      <h5>用户注册</h5>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'needs-validation', novalidate: true } ) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-group">
          <%= f.label "手机号" %><br />
          <%= f.text_field :cellphone, autofocus: true, class: "form-control", required: true %>
          <div class="invalid-feedback">
            请输入手机号
          </div>
        </div>

        <div class="form-group">
          <%= f.label "密码" %>
          <% if @minimum_password_length %>
            <em>(最少 <%= @minimum_password_length %> 个字符)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control", required: true %>
          <div class="invalid-feedback">
            请输入密码
          </div>
        </div>

        <div class="form-group">
          <%= f.label "确认密码" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", required: true %>
          <div class="invalid-feedback">
            请输入确认密码
          </div>
        </div>

        <div class="form-group">
          <%= f.submit "注册", class: "btn btn-primary btn-block" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>

    </div>
  </div>
</div>